<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Rememory.Views.Controls.EmptyPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Rememory.Views.Controls"
             x:Name="ParentControl"
             Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
             Loaded="ParentControl_Loaded">
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="8">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NormalView" />

                <VisualState x:Name="CompactView">
                    <VisualState.Setters>
                        <Setter Target="EmptyPreviewIcon.FontSize"
                                Value="14" />
                        <Setter Target="EmptyPreviewText.Style"
                                Value="{ThemeResource CaptionTextBlockStyle}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <FontIcon x:Name="EmptyPreviewIcon"
                  FontSize="16"
                  Glyph="&#xE9CE;" />

        <TextBlock x:Name="EmptyPreviewText"
                   x:Uid="/Clipboard/Clip_NoPreview"
                   Style="{ThemeResource BodyTextBlockStyle}" />
    </StackPanel>
</UserControl>
